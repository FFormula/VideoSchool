@model VideoSchool.Models.Units.UserPassw

@{
    ViewBag.Title = "Password";
}

<h2>Password</h2>

<div class="col-lg-12 row">
    <!--<h3 class="alert-link">Main:</h3>-->
    <span class="field-image input-group-addon menuedit-span " style="width: 180px; text-align: left;"><i class="glyphicon glyphicon-check"><strong> Old Password:</strong></i></span>
    @Html.Password("passwordOdl", Model.passw, new { @class = "form-control" })
</div>
<div class="col-lg-12 row">
    <!--<h3 class="alert-link">Main:</h3>-->
    <span class="field-image input-group-addon menuedit-span " style="width: 180px; text-align: left;"><i class="glyphicon glyphicon-check"><strong> New Password:</strong></i></span>
    @Html.Password("passwordNew", Model.passw, new { @class = "form-control" })
</div>
<div class="col-lg-12 row">
    <!--<h3 class="alert-link">Main:</h3>-->
    <span class="field-image input-group-addon menuedit-span " style="width: 180px; text-align: left;" ><i class="glyphicon glyphicon-check"><strong> Confirm Password:</strong></i></span>
    @Html.Password("passwordNewYes", Model.passw, new { @class = "form-control" })
</div>

<div class="col-lg-12 row">
    <input type="submit" value="Save changes password" title="Save changes of the users" class="btn btn-success" />
    @Html.ActionLink("Delete", "DelMenu", "Cabinet", new { id = Model.id }, new { @class = "btn btn-danger" })
</div>
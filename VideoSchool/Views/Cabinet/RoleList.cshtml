@model VideoSchool.Models.Units.Role
@using System.Data;

@{
    ViewBag.Title = "Roles List";
}

<h2>
    <span class="glyphicon glyphicon-certificate"></span>
    &nbsp; List of all roles
</h2>
<div>
    @using (Html.BeginForm("RoleList", "Cabinet", FormMethod.Get))
    {
        <div>
            
            @Html.TextBox("filter", Model.filter, new { @class = "field-filter form-control" })
            @* <input type="submit" value="Filter" class="btn btn-primary" /> *@
            <button type="submit" value="Filter" class="btn btn-primary form-control btn-filter">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            </button> &nbsp;
            @Html.ActionLink("Add", "RoleEdit", "Cabinet", new { id = "Add" }, new { @class = "glyphicon glyphicon-plus btn btn-success", @title = "add new role" })

        </div>
    }
</div>
<div class="col-lg-12">
    There are @Model.qtable.lines rows.
   
</div>

   <hr />

<div>

</div>
@if (Model.qtable.lines > 0)
{
    <table class="table table-hover">
        <tr class="success">
            <th><span class="glyphicon glyphicon-edit"></span> </th>
            <th>Name</th>
            <th>Info</th>
            <th>Edit Actions</th>
        </tr>
        @foreach (DataRow x in Model.qtable.table.Rows)
        {
            <tr>
                <td>
                    @Html.ActionLink(@x["id"].ToString(), "RoleEdit", "Cabinet",
                                 new { id = x["id"].ToString() }, new { @class = "btn btn-success", @title = "edit role " + @x["id"].ToString() })
                </td>
                <td>@x["name"].ToString()</td>
                <td>@x["info"].ToString()</td>
                <td>@Html.ActionLink("Actions "+@x["name"].ToString(), "RoleAction", "Cabinet",
                                 new { id = x["id"].ToString() }, new { @class = "btn btn-default", @title = "edit actions for role " + @x["id"].ToString() })</td>
            </tr>

        }
    </table>
}

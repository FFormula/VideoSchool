@model VideoSchool.Models.Units.Menus

@using System.Data;
@{
    ViewBag.Title = "Menus List";
}

<h2>
    <span class="glyphicon glyphicon-menu-hamburger"></span>
    &nbsp; List of all Menus
</h2>

@using (Html.BeginForm("MenusList", "Cabinet", FormMethod.Get))
{
    <div class="col-lg-12 row">
        @Html.TextBox("filter", Model.filter, new { @class = "field-filter form-control" })
        @* <input type="submit" value="Filter" class="btn btn-primary" /> *@
        <button type="submit" value="Filter" class="btn btn-primary form-control btn-filter">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        </button>
    </div>
   
}
@using (Html.BeginForm("MenusList", "Cabinet", FormMethod.Get)) { 
<div class="col-lg-12 row">
    <select class="field-filter form-control" name="SelectMenuId">
        @foreach (DataRow x in Model.menuMainSelect.table.Rows)
            {
            <option value="@x["id"]">@x["name"]</option>

        }
    </select>
    <button type="submit" value="Filter1" class="btn btn-primary form-control btn-filter" title="Filter from Selection MenuMain" style="margin-left: 7px; margin-top: -2px" >
        <span class="glyphicon glyphicon-filter" aria-hidden="true"></span>
    </button>
</div>
}

<div class="col-lg-12 row">
    There are @Model.qtable.lines rows.
    @Html.ActionLink("Add", "MenusEdit", "Cabinet", new { id = "Add" }, new { @class = "glyphicon glyphicon-plus btn btn-default", @title = "add new action" })
</div>
<hr />




@if (Model.qtable.lines > 0)
{         
    <table class="table table-hover">
        <tr class="success">
            <th>Move</th>
            <th><span class="glyphicon glyphicon-edit"></span></th>
            <th>Menu</th>
            <th>Href</th>
            <th>Name</th>
            <th>Status</th>
        </tr>
        @foreach (DataRow x in Model.qtable.table.Rows)
        {
            <tr>
                <td>
                    <a href="~/Cabinet/MenusMoveUp/@x["id"]"><span class="glyphicon glyphicon-arrow-up">&nbsp;</span></a>
                    &nbsp;
                    <a href="~/Cabinet/MenusMoveDn/@x["id"]"><span class="glyphicon glyphicon-arrow-down">&nbsp;</span></a>
                </td>
                <td>
                    @Html.ActionLink(@x["id"].ToString(), "MenusEdit", "Cabinet",
                                 new { id = x["id"].ToString() }, new { @class = "btn btn-success", @title = "edit action " + @x["id"].ToString() })
                </td>
                <td>@x["menu"].ToString()</td>
                <td>@x["href"].ToString()</td>
                <td>@x["name"].ToString()</td>
                <td>@x["status"].ToString()</td>
            </tr>
        }
    </table>
}


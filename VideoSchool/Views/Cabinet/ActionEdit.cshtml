@model VideoSchool.Models.Units.Action

@{
    ViewBag.Title = "ActionEdit";
}

    <h2 class="alert-link" >ActionEdit</h2>

@using (Html.BeginForm("ActionEdit", "Cabinet"))
{
    <div style="color: red">
        @ViewBag.error
    </div>
    <div>
        <h2 class="alert-link"></h2>
        <span class="alert alert-info">
            <strong>ID: </strong> @Model.id 
        </span>
       
    </div>
    <div>
        <h3 class="alert-link">Name:</h3>

        <span class="field-image input-group-addon"><i class="glyphicon glyphicon-check"></i></span>
        @Html.TextBox("name", Model.name, new { @class = "form-control", @placeholder = "Password" })
    </div>
    <div>
        <h3 class="alert-link">Info:</h3>
        <span class="field-image input-group-addon"><i class="glyphicon glyphicon-check"></i></span>
        @Html.TextBox("info", Model.info, new { @class = "form-control" })
    </div>
    <div>
        <h3 class="alert-link">Status:</h3>
        <span class="field-image input-group-addon"><i class="glyphicon glyphicon-check"></i></span>
        @Html.TextBox("status", Model.status, new { @class = "form-control" })
    </div>
    <div><input type="submit" value="Save changes" title="Save changes of the users" class="btn btn-success" /></div>
}